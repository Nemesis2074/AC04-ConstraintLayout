<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button11"
            app:layout_constraintStart_toEndOf="@+id/button12"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button13"
            app:layout_constraintBottom_toTopOf="@+id/guideline" android:layout_marginBottom="60dp"
            android:background="#388E3C" android:textColor="#FFF"/>
    <Button
            android:text="Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button12" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button11"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button11"
            android:background="#388E3C" android:textColor="#FFF"/>
    <Button
            android:text="Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button13"
            app:layout_constraintStart_toEndOf="@+id/button11" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button11" android:background="#388E3C" android:textColor="#FFF"/>
    <Button
            android:text="Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button14" app:layout_constraintEnd_toEndOf="@+id/button11"
            app:layout_constraintStart_toStartOf="@+id/button11"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="@+id/guideline"
            android:background="#388E3C" android:textColor="#FFF"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="horizontal" app:layout_constraintGuide_percent="0.5"/>
</android.support.constraint.ConstraintLayout>